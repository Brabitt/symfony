{% extends 'base.html.twig' %}

{% block title %}Conference Guestbook{% endblock %}

{% block body %}
    <div class="container-fluid text-md-center p-4">
        <h2>conferences </h2>
    </div>


    {% for conference in conferences %}
        <div class="container col-md-4 ">
            <div class="card-deck p-2">
                <div class="card">
                    <img src="{{  conference.photo }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">{{ conference }}</h4>
                        <h6 class="card-text">{{ conference.theme }}</h6>
                        <p class="card-text">{{ conference.description }}</p>
                    </div>
                    <p><a href="{{ path('conference', { id: conference.id }) }}">View</a></p>
                </div>
            </div>
        </div>


    {% endfor %}
{% endblock %}